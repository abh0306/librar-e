<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="15dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="3dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="1dp"
        android:background="@color/bar"
        >
        <TextView
            android:id="@+id/book_item_name_cart"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/book_item_quantity_cart"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/book_item_image_cart"
            android:text="Book name"
            android:textSize="21sp"
            android:layout_marginLeft="5dp"
            android:layout_above="@+id/book_item_price_cart"
            android:textStyle="bold"
            android:textColor="@color/blue_logo_fontcolor"
            />
        <ImageView
            android:id="@+id/book_item_image_cart"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/buttonsquare"
        />
        <ImageButton
            android:id="@+id/removeAllItemBooksFromCart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/removefromcart"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/book_item_name_cart"
            />
        <ImageButton
            android:layout_marginLeft="3dp"
            android:id="@+id/removenumberCart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/inputtext"
            android:src="@drawable/remove"
            android:layout_alignTop="@+id/book_item_quantity_cart"
            android:layout_toLeftOf="@+id/book_item_quantity_cart"
            />
        <TextView
            android:id="@+id/book_item_quantity_cart"
            android:layout_height="20dp"
            android:layout_width="30dp"
            android:textSize="15sp"
            android:layout_toLeftOf="@id/addnumberCart"
            android:background="@drawable/inputtext"
            android:paddingHorizontal="2dp"
            android:layout_above="@+id/book_item_price_cart"
            android:textAlignment="center"
            android:layout_marginBottom="2dp"/>
        <ImageButton
            android:id="@+id/addnumberCart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/inputtext"
            android:src="@drawable/add"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_alignTop="@+id/book_item_quantity_cart"
            />
        <TextView
            android:id="@+id/book_item_price_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/addnumberCart"
            android:text="Total"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="@color/blue_logo_fontcolor"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>