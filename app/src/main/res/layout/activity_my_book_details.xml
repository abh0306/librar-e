<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetails"
    android:background="@color/background_color"

    >
    <ImageView
        android:id="@+id/bookpicturedetails"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/updateMyBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookpicturedetails"
        android:textSize="30sp"
        android:background="@drawable/elevatedelement"
        android:text="Modifica il libro"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/blue_logo_fontcolor"
        android:elevation="10dp"
        />

    <ScrollView
        android:id="@+id/scrollbookdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateMyBook"
        android:layout_above="@id/updatebook"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/layoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/booktitletext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:padding="1dp"
                    android:text="Titolo"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />

                <EditText
                    android:id="@+id/booktitledetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-1dp"
                    android:layout_toRightOf="@+id/bookdescriptiontext"
                    android:background="@drawable/inputtext"
                    android:padding="3dp"
                    android:text="Titolo"
                    android:textColor="@color/blue_logo_fontcolor"
                    android:textSize="22sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/layoutTitle">
                <TextView
                    android:id="@+id/bookdescriptiontext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:padding="1dp"
                    android:text="Descrizione"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <EditText
                    android:id="@+id/bookdescriptiondetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="3dp"
                    android:layout_marginLeft="-1dp"
                    android:layout_toRightOf="@+id/bookdescriptiontext"
                    android:text="Descrizione"
                    android:background="@drawable/inputtext"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutauthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutdescription"
                android:layout_marginTop="-1dp">
                <TextView
                    android:id="@+id/bookauthortext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:text="Autore"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <EditText
                    android:id="@+id/bookauthordetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:layout_marginLeft="-1dp"
                    android:text="Autore"
                    android:layout_toRightOf="@id/bookauthortext"
                    android:textColor="@color/blue_logo_fontcolor"
                    android:background="@drawable/inputtext"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutauthor"
                android:layout_marginTop="-1dp">
                <TextView
                    android:id="@+id/bookphtext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:text="Editore"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <EditText
                    android:id="@+id/bookphdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:layout_marginLeft="-1dp"
                    android:text="Editore"
                    android:layout_toRightOf="@id/bookphtext"
                    android:textColor="@color/blue_logo_fontcolor"
                    android:background="@drawable/inputtext"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutph"
                android:layout_marginTop="-1dp">
                <TextView
                    android:id="@+id/bookyeartext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:text="Anno"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <EditText
                    android:id="@+id/bookyeardetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:layout_marginLeft="-1dp"
                    android:text="Anno"
                    android:layout_toRightOf="@id/bookyeartext"
                    android:textColor="@color/blue_logo_fontcolor"
                    android:background="@drawable/inputtext"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutyear"
                android:layout_marginTop="-1dp">
                <TextView
                    android:id="@+id/bookISBNtext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:text="ISBN"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <EditText
                    android:id="@+id/bookISBNdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:layout_marginLeft="-1dp"
                    android:text="ISBN"
                    android:layout_toRightOf="@id/bookISBNtext"
                    android:textColor="@color/blue_logo_fontcolor"
                    android:background="@drawable/inputtext"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutISBN"
                android:layout_marginTop="-1dp">
                <TextView
                    android:id="@+id/bookPricetext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:text="Prezzo"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <EditText
                    android:id="@+id/bookpricedetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:layout_marginLeft="-1dp"
                    android:text="Prezzo"
                    android:layout_toRightOf="@id/bookISBNtext"
                    android:textColor="@color/blue_logo_fontcolor"
                    android:inputType="numberDecimal"
                    android:background="@drawable/inputtext"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
        <Button
            android:id="@+id/updatebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_lowerbar"
            android:layout_alignParentEnd="true"
            android:text="Modifica Libro"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>