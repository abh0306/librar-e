<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="15dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="3dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="1dp"
        android:background="@color/bar"
        >
        <TextView
            android:id="@+id/book_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/book_item_image"
            android:text="Book name"
            android:textSize="25sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/blue_logo_fontcolor"
            />
        <ImageView
            android:id="@+id/book_item_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:background="@drawable/buttonsquare"
            />
        <TextView
            android:id="@+id/book_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/book_item_name"
            android:layout_above="@id/book_item_price"
            android:textSize="15sp"
            android:textColor="@color/blue_logo_fontcolor"
            android:layout_toRightOf="@+id/book_item_image"
            android:paddingRight="15dp"
            />
        <TextView
            android:id="@+id/book_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/blue_logo_fontcolor"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>