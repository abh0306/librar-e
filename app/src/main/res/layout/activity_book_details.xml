<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetails"
    android:background="@color/background_color"

    >
    <ImageView
        android:id="@+id/bookpicturedetails"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/booktitledetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookpicturedetails"
        android:textSize="30sp"
        android:background="@drawable/elevatedelement"
        android:text="Titolo"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="@color/blue_logo_fontcolor"
        android:elevation="10dp"
        />

    <ScrollView
        android:id="@+id/scrollbookdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booktitledetails"
        android:layout_above="@id/pricelayout"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/layoutdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/bookdescriptiontext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:padding="1dp"
                    android:text="Descrizione"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <TextView
                    android:id="@+id/bookdescriptiondetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="3dp"
                    android:layout_marginLeft="-1dp"
                    android:layout_toRightOf="@+id/bookdescriptiontext"
                    android:text="Descrizione"
                    android:background="@drawable/inputtext"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutauthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutdescription"
                android:layout_marginTop="-1dp">
                <TextView
                    android:id="@+id/bookauthortext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:text="Autore"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <TextView
                    android:id="@+id/bookauthordetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:layout_marginLeft="-1dp"
                    android:text="Autore"
                    android:layout_toRightOf="@id/bookauthortext"
                    android:textColor="@color/blue_logo_fontcolor"
                    android:background="@drawable/inputtext"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutauthor"
                android:layout_marginTop="-1dp">
                <TextView
                    android:id="@+id/bookphtext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:text="Editore"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <TextView
                    android:id="@+id/bookphdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:layout_marginLeft="-1dp"
                    android:text="Editore"
                    android:layout_toRightOf="@id/bookphtext"
                    android:textColor="@color/blue_logo_fontcolor"
                    android:background="@drawable/inputtext"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutph"
                android:layout_marginTop="-1dp">
                <TextView
                    android:id="@+id/bookyeartext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:text="Anno"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <TextView
                    android:id="@+id/bookyeardetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:layout_marginLeft="-1dp"
                    android:text="Anno"
                    android:layout_toRightOf="@id/bookyeartext"
                    android:textColor="@color/blue_logo_fontcolor"
                    android:background="@drawable/inputtext"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutlanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutyear"
                android:layout_marginTop="-1dp">
                <TextView
                    android:id="@+id/booklanguagetext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:text="Lingua"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <TextView
                    android:id="@+id/booklanguagedetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:layout_marginLeft="-1dp"
                    android:text="Lingua"
                    android:layout_toRightOf="@id/booklanguagetext"
                    android:textColor="@color/blue_logo_fontcolor"
                    android:background="@drawable/inputtext"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutlanguage"
                android:layout_marginTop="-1dp">
                <TextView
                    android:id="@+id/bookISBNtext"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:text="ISBN"
                    android:background="@drawable/inputtext"
                    android:textStyle="bold"
                    android:textColor="@color/blue_logo_fontcolor"
                    />
                <TextView
                    android:id="@+id/bookISBNdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:padding="1dp"
                    android:layout_marginLeft="-1dp"
                    android:text="ISBN"
                    android:layout_toRightOf="@id/bookISBNtext"
                    android:textColor="@color/blue_logo_fontcolor"
                    android:background="@drawable/inputtext"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/pricelayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/elevatedelement"
        android:elevation="10dp"
        android:layout_marginTop="-4.5dp">
        <TextView
            android:id="@+id/bookpricedetail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="0.00€"
            android:paddingHorizontal="5dp"
            android:textColor="@color/blue_logo_fontcolor"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/bookpricetext"
            />
        <TextView
            android:id="@+id/bookpricetext"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Prezzo"
            android:layout_marginLeft="2dp"
            android:textColor="@color/blue_logo_fontcolor"
            android:textSize="30sp"
            />
        <ImageButton
            android:layout_marginLeft="3dp"
            android:id="@+id/removenumber"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/inputtext"
            android:src="@drawable/remove"
            android:layout_alignTop="@+id/number"
            />
        <TextView
            android:id="@+id/number"
            android:layout_height="30dp"
            android:layout_width="50dp"
            android:layout_marginTop="-35dp"
            android:textSize="21sp"
            android:layout_toRightOf="@id/removenumber"
            android:background="@drawable/inputtext"
            android:paddingHorizontal="2dp"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"/>
        <ImageButton
            android:id="@+id/addnumber"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/inputtext"
            android:src="@drawable/add"
            android:layout_alignTop="@+id/number"
            android:layout_toRightOf="@+id/number"
            />
        <Button
            android:id="@+id/addtocart"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/blue_lowerbar"
            android:paddingHorizontal="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="3dp"
            android:text="Aggiungi al carrello"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>