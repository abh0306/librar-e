<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Login">

    <ImageView
        android:id="@+id/librare_logo"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:src="@drawable/librareicon"
        />

    <TextView
        android:id="@+id/fpasstext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/librare_logo"
        android:layout_marginTop="40dp"
        android:text="Hai dimenticato la password?"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="55dp"
        android:textColor="@color/white"
        />


    <EditText
        android:id="@+id/emailresetpwd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="5dp"
        android:layout_below="@+id/fpasstext"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/inputtext"
        android:textSize="30sp"
        app:autoSizeTextType="uniform"
        android:hint="E-mail"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/resetPwdBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailresetpwd"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Reimposta la password"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Creato da Ben Hamida Anis (mat.300743)"
        />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="Missing Constraints"
        />

</RelativeLayout>